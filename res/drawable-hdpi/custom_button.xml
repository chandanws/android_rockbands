<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/bg_color"
                android:endColor="@color/txt_info_color"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/bg_color" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/bg_color"
                android:startColor="@color/txt_info_color"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/bg_color" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#969494"
                android:startColor="@color/bg_color"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/bg_color" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>